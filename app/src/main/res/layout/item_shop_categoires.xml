<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:background="?attr/backgroundScreen"
    android:layout_marginBottom="@dimen/margin_default">


  <androidx.cardview.widget.CardView
      android:id="@+id/card_view"
      android:layout_width="@dimen/shop_category_size"
      android:layout_height="@dimen/shop_category_size"
      app:layout_constraintStart_toStartOf="parent"
      app:cardCornerRadius="@dimen/margin_10_dp"
      app:layout_constraintTop_toTopOf="parent">
      <ImageView
          android:id="@+id/iv_category"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          tools:src="@drawable/img__category_phone_test" />
  </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_micro"
        android:layout_marginTop="@dimen/margin_min"
        android:ellipsize="end"
        android:fontFamily="@font/nunito"
        android:maxLines="1"
        android:paddingVertical="@dimen/padding_micro"
        android:textColor="?attr/color_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        tools:text="Laptops" />


</androidx.constraintlayout.widget.ConstraintLayout>