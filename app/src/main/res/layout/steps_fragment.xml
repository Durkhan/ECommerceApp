<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/step1"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/step1"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="2.2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/font_600"
            android:text="@string/high_quality"
            android:layout_weight="0.6"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="?attr/textColor"
            android:textSize="36sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/step1_images"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/step2"
        android:visibility="gone"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/step2"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="2.2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/font_600"
            android:text="@string/choose_deliver_method"
            android:layout_weight="0.6"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="?attr/textColor"
            android:textSize="36sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/steps_images"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/step3"
        android:visibility="gone"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/step3"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="2.2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/font_600"
            android:text="@string/convenience"
            android:layout_weight="0.6"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="?attr/textColor"
            android:textSize="36sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/step3_images"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"/>
    </LinearLayout>
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.88"/>
    <Button
        android:id="@+id/mnext_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        android:textColor="?attr/button_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="?attr/button_backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />
</androidx.constraintlayout.widget.ConstraintLayout>